{
    // this editor.rulers section places vertical lines in your editor. 
    // In general, keep lines of code to 79 char or less (one char before 
    // the first purple line). Sometimes it makes sense to exceed this, 
    // but think really hard before exceeding the red vertical line at 120 char
    "editor.rulers": [
        {
            "column": 80,
            "color": "#ff00FF"
        },
        {
            "column": 120,
            "color": "#ff0000"
        }
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.formatOnSave": true
    },
    "autopep8.args": [
        "--max-line-length", 
        "79"
    ],
    "python.testing.pytestArgs": [
        "src/tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python"
}
